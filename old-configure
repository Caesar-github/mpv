    _vdpau_dec_old=yes
    def_vdpau_dec='#define HAVE_VDPAU_HWACCEL 0'
    def_vdpau_dec_old='#define HAVE_VDPAU_DECODER 1'
  fi
else
  def_vdpau_dec='#define HAVE_VDPAU_HWACCEL 0'
  def_vdpau_dec_old='#define HAVE_VDPAU_DECODER 0'
fi


