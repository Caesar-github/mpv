if test "$libavdevice" = auto ; then
    libavdevice=no
    # Usually, libavdevice depends on libavfilter
    if test "$libavfilter" = yes && pkg_config_add "libavdevice >= 54.0.0" ; then
        libavdevice=yes
    fi
