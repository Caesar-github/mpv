if test "$_vcd" = auto; then
  _vcd=no
  if linux || freebsd || netbsd || openbsd || dragonfly || darwin ; then
    _vcd=yes
  elif mingw32; then
  header_check_broken windows.h ntddcdrm.h && _vcd=yes
  fi
fi
